    <title>Shubham Verma | About Me</title>
    <link rel="stylesheet" href="/styles/global.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap"
    />
    <style>
        body {
          font-family: "Space Mono", monospace; /* Updated font-family */
          margin: 0;
          padding: 0;
          background-color: #0d0208; /* Background color */
          color: #fff;
        }
      
        header {
          max-width: 1100px; /* Ensure header width */
          margin: 0 auto;
        }
      
        nav {
          max-width: 1100px; /* Ensure nav width */
          margin: 0 auto;
        }
      
        main {
          display: flex;
          flex-direction: column;
          align-items: center;
          padding: 2rem;
          max-width: 1100px; /* Maximum width for large devices */
          margin: 0 auto;
          width: 100%; /* Ensure it takes full width on smaller screens */
        }
      
        section {
          background-color: #000;
          border: 2px solid #00f43f; /* Green border color */
          border-radius: 10px;
          padding: 1rem;
          margin-bottom: 2rem;
          text-align: center;
          width: 100%; /* Full width within the main container */
        }
      
        .skills-content {
          display: flex;
          flex-direction: column;
          align-items: center;
          text-align: center;
        }
      
        .skills-category {
          margin-bottom: 2rem;
        }
      
        .skills-category h3 {
          margin-bottom: 1rem;
          color: #00f43f; /* Green color for category titles */
        }
      
        .skills-list {
          list-style: none;
          padding: 0;
          display: flex;
          flex-wrap: wrap;
          justify-content: center;
        }
      
        .skills-list li {
          margin: 0.5rem;
          display: flex;
          align-items: center;
          justify-content: center;
        }
      
        .skills-list img {
          width: 24px;
          height: 24px;
          margin-right: 0.5rem;
        }
      
        .timeline {
          position: relative;
          max-width: 1100px; /* Ensure timeline width */
          margin: 0 auto;
          padding: 1rem;
          list-style-type: none;
        }
      
        .timeline::before {
          content: '';
          position: absolute;
          width: 2px;
          background-color: #00f43f; /* Green color for the timeline line */
          top: 0;
          bottom: 0;
          left: 20px; /* Adjusted to align with items */
          margin-left: -1px;
        }
      
        .timeline-item {
          position: relative;
          margin-bottom: 2rem;
          padding-left: 40px; /* Increased padding to make space for the line */
          text-align: left;
        }
      
        .timeline-item::before {
          content: ' ';
          position: absolute;
          width: 12px;
          height: 12px;
          background-color: #00f43f; /* Green color for the timeline dots */
          border-radius: 50%;
          left: 10px; /* Adjusted to align with the line */
          top: 0;
          margin-top: 8px; /* Center vertically */
        }
      
        .timeline-item h3 {
          margin: 0;
          color: #00f43f; /* Green color for job titles */
        }
      
        .timeline-item p {
          margin: 0.5rem 0;
        }
      
        @media (max-width: 1024px) {
          main {
            padding: 1rem;
            width: auto; /* Adjust width for smaller devices */
          }
        }
      </style>
      
  </head>
